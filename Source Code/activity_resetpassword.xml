<?xml version="1.0" encoding="utf-8"?> 
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent" 
    android:background="#C8EFD5" 
    android:layout_height="match_parent" 
    tools:context=".MainActivity"> 
 
    <TextView 
        android:id="@+id/textView" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:background="@color/ColorUp" 
        android:textSize="20dp" 
        tools:ignore="MissingConstraints"></TextView> 
 
    <TextView 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:background="@color/ColorUp" 
        android:textSize="20dp" 
        android:id="@+id/bawah" 
        tools:ignore="MissingConstraints" 
        tools:layout_editor_absoluteX="52dp" 
        tools:layout_editor_absoluteY="704dp"></TextView> 
 
    <ImageView 
        android:layout_width="60dp" 
        android:layout_height="60dp" 
        android:src="@drawable/gemb" 
        tools:layout_editor_absoluteX="175dp" 
        tools:layout_editor_absoluteY="46dp" 
        tools:ignore="MissingConstraints"></ImageView> 
 
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:fontFamily="Arial" 
        android:gravity="center" 
        android:paddingTop="10dp" 
        android:text="Forgot Password" 
        android:textSize="20dp" 
        android:textStyle="bold" 
        tools:ignore="MissingConstraints" 
        tools:layout_editor_absoluteX="128dp" 
        android:textColor="#1C441C" 
        tools:layout_editor_absoluteY="117dp"></TextView> 
 
    <TextView 
        android:id="@+id/just" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:fontFamily="Arial" 
        android:text="We just need your registered email address " 
        android:textSize="15dp" 
        android:textStyle="bold" 
        tools:ignore="MissingConstraints" 
        tools:layout_editor_absoluteX="68dp" 
        tools:layout_editor_absoluteY="154dp" 
        android:textColor="#1C441C"></TextView> 
 
    <TextView 
        android:id="@+id/send" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_below="@+id/just" 
        android:fontFamily="Arial" 
        android:gravity="center" 
        android:text="to send your password reset" 
 
        android:textSize="15dp" 
        android:textStyle="bold" 
        tools:ignore="MissingConstraints" 
        android:textColor="#1C441C" 
        tools:layout_editor_absoluteX="110dp" 
        tools:layout_editor_absoluteY="181dp"></TextView> 
 
    <FrameLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:background="@drawable/style" 
        tools:ignore="MissingConstraints" 
        tools:layout_editor_absoluteX="30dp" 
        tools:layout_editor_absoluteY="226dp" 
        android:layout_marginRight="30dp" 
        android:layout_marginLeft="30dp"> 
        <ImageView 
            android:layout_height="30dp" 
            android:layout_width="30dp" 
            android:layout_marginTop="70dp" 
            android:layout_marginLeft="5dp" 
            android:src="@drawable/user"></ImageView> 
        <EditText 
            android:id="@+id/level" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginLeft="40dp" 
            android:layout_marginTop="80dp" 
            android:layout_marginRight="40dp" 
            android:layout_marginBottom="20dp" 
            android:background="@drawable/style1" 
            android:text="Level" 
            android:textSize="15dp"></EditText> 
 
        <Button 
            android:layout_width="match_parent" 
            android:layout_height="30dp" 
            android:layout_marginLeft="50dp" 
            android:layout_marginTop="200dp" 
            android:layout_marginRight="50dp" 
            android:layout_marginBottom="80dp" 
            android:text="Reset Password" 
            android:fontFamily="Arial" 
            android:textStyle="bold" 
            android:textSize="13dp" 
            android:background="@drawable/button" 
 
            ></Button> 
    </FrameLayout> 
    <TextView 
        android:id="@+id/dont" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:fontFamily="Arial" 
        android:text="don't have a account ? " 
        android:textSize="15dp" 
        android:textStyle="bold" 
        tools:ignore="MissingConstraints" 
        app:layout_constraintBottom_toTopOf="@id/bawah" 
        android:layout_marginLeft="20dp" 
        android:paddingLeft="150dp" 
        android:paddingBottom="120dp" 
        android:textColor="#1C441C" 
        > </TextView> 
    <TextView 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:fontFamily="Arial" 
        android:text="SIGN UP" 
        android:textStyle="bold" 
        app:layout_constraintBottom_toTopOf="@id/bawah" 
        android:layout_marginLeft="0dp" 
        android:paddingLeft="170dp" 
        android:textSize="30dp" 
        android:paddingBottom="70dp" 
        android:textColor="#1C441C" 
 
        ></TextView> 
 
</androidx.constraintlayout.widget.ConstraintLayout>