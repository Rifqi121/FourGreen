<?xml version="1.0" encoding="utf-8"?> 
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:background="#c8efd5" 
    tools:context=".MainActivity"> 
 
    <View 
        android:layout_width="wrap_content" 
        android:layout_height="25dp" 
        android:background="#00B300" 
        app:layout_constraintTop_toTopOf="parent" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent"/> 
 
    <View 
        android:layout_width="wrap_content" 
        android:layout_height="25dp" 
        android:background="#00B300" 
        android:layout_marginTop="110dp" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/utama" /> 
 
    <Button 
        android:layout_width="150dp" 
        android:layout_height="30dp" 
        android:text="Sign Up" 
        android:background="@drawable/lengkung" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/gambar" 
        android:layout_marginRight="170dp" 
        android:layout_marginTop="10dp"/> 
 
    <Button 
        android:layout_width="150dp" 
        android:layout_height="30dp" 
        android:text="Login" 
        android:background="@drawable/lengkung2" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/gambar" 
        android:layout_marginLeft="170dp" 
        android:layout_marginTop="10dp"/> 
 
    <TextView 
        android:id="@+id/utama" 
        android:layout_width="340dp" 
        android:layout_height="400dp" 
        android:background="@drawable/belakang" 
        android:text="Create an Account" 
        android:gravity="center_horizontal" 
        android:padding="20dp" 
        android:layout_marginTop="120dp" 
        app:layout_constraintBottom_toBottomOf="parent" 
        app:layout_constraintHorizontal_bias="0.492" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toTopOf="parent" 
        app:layout_constraintVertical_bias="0.359" 
        /> 
 
    <ImageView 
        android:id="@+id/gambar" 
        android:layout_width="100dp" 
        android:layout_height="100dp" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toTopOf="parent" 
        android:layout_marginTop="30dp" 
        android:src="@drawable/gambar"/> 
 
 
    <EditText 
        android:id="@+id/fname" 
        android:layout_width="150dp" 
        android:layout_height="30dp" 
        android:layout_marginRight="170dp" 
        android:textSize="14dp" 
        android:background="#a9a9a9" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toTopOf="@+id/utama" 
        android:layout_marginTop="70dp" 
        android:hint="First Name"/> 
 
    <EditText 
        android:id="@+id/lname" 
        android:layout_width="150dp" 
        android:layout_height="30dp" 
        android:layout_marginLeft="170dp" 
        android:textSize="14dp" 
        android:background="#a9a9a9" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toTopOf="@+id/utama" 
        android:layout_marginTop="70dp" 
        android:hint="Last Name"/> 
 
    <EditText 
        android:id="@+id/email" 
        android:layout_width="320dp" 
        android:layout_height="30dp" 
        android:textSize="14dp" 
        android:background="#a9a9a9" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toTopOf="@+id/utama" 
        android:layout_marginTop="130dp" 
        android:hint="E-mail"/> 
 
 
    <EditText 
        android:id="@+id/pswd1" 
        android:layout_width="150dp" 
        android:layout_height="30dp" 
        android:layout_marginRight="170dp" 
        android:textSize="14dp" 
        android:background="#a9a9a9" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toTopOf="@+id/utama" 
        android:layout_marginTop="190dp" 
        android:hint="Password"/> 
 
    <EditText 
        android:id="@+id/pswd2" 
        android:layout_width="150dp" 
        android:layout_height="30dp" 
        android:layout_marginLeft="170dp" 
        android:textSize="14dp" 
        android:background="#a9a9a9" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toTopOf="@+id/utama" 
        android:layout_marginTop="190dp" 
        android:hint="Confirm Password"/> 
 
 
    <EditText 
        android:id="@+id/addrs" 
        android:layout_width="320dp" 
        android:layout_height="30dp" 
        android:textSize="14dp" 
        android:background="#a9a9a9" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toTopOf="@+id/utama" 
        android:layout_marginTop="250dp" 
        android:hint="Address"/> 
 
 
    <CheckBox 
        android:id="@+id/cek" 
        android:layout_width="320dp" 
        android:layout_height="40dp" 
        android:layout_marginRight="20dp" 
        android:hint="i agree with Term Service and Privacy Police" 
        android:textSize="12dp" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toTopOf="@+id/utama" 
        android:layout_marginTop="280dp"/> 
 
    <Button 
        android:layout_width="150dp" 
        android:layout_height="50dp" 
        android:text="Sign Up" 
        android:background="@drawable/lengkung" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/cek" 
        android:layout_marginTop="10dp"/> 
 
 
</androidx.constraintlayout.widget.ConstraintLayout>