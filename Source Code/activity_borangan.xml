<?xml version="1.0" encoding="utf-8"?> 
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    xmlns:tools="http://schemas.android.com/tools" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    android:background="#c8efd5" 
    tools:context=".MainActivity"> 
 
    <View 
        android:layout_width="wrap_content" 
        android:layout_height="25dp" 
        android:background="#00B300" 
        app:layout_constraintTop_toTopOf="parent" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent"/> 
 
    <View 
        android:layout_width="wrap_content" 
        android:layout_height="25dp" 
        android:background="#00B300" 
        android:layout_marginTop="140dp" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/zona" /> 
 
    <View 
        android:id="@+id/zona" 
        android:layout_width="340dp" 
        android:layout_height="400dp" 
        app:layout_constraintBottom_toBottomOf="parent" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toTopOf="parent"/> 
 
    <ImageView 
        android:id="@+id/gambar" 
        android:layout_width="120dp" 
        android:layout_height="100dp" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toTopOf="@id/zona" 
        android:layout_marginTop="20dp" 
        android:src="@drawable/hole"/> 
 
    <TextView 
        android:id="@+id/judul" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        app:layout_constraintBottom_toBottomOf="@id/gambar" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toTopOf="@id/zona" 
        android:text="Borangan" 
        android:textSize="20dp" 
        android:layout_marginTop="180dp"/> 
 
    <TextView 
        android:id="@+id/judul2" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        app:layout_constraintBottom_toBottomOf="@id/gambar" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toTopOf="@id/judul" 
        android:text="(Biopori Ramah Lingkungan)" 
        android:textSize="16dp" 
        android:layout_marginTop="100dp"/> 
 
    <Button 
        android:id="@+id/definisi" 
        android:layout_width="150dp" 
        android:layout_height="50dp" 
        android:text="Definisi" 
        android:background="@drawable/buttonback" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/judul2" 
        android:layout_marginRight="170dp" 
        android:layout_marginTop="30dp"/> 
 
    <Button 
        android:id="@+id/sejarah" 
        android:layout_width="150dp" 
        android:layout_height="50dp" 
        android:text="Sejarah" 
        android:background="@drawable/buttonback" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/judul2" 
        android:layout_marginLeft="170dp" 
        android:layout_marginTop="30dp"/> 
 
    <Button 
        android:layout_width="150dp" 
        android:layout_height="55dp" 
        android:text="Kelebihan Kekurangan" 
        android:background="@drawable/buttonback" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/definisi" 
        android:layout_marginRight="170dp" 
        android:layout_marginTop="30dp"/> 
 
    <Button 
        android:layout_width="150dp" 
        android:layout_height="55dp" 
        android:text="Tips" 
        android:background="@drawable/buttonback" 
        app:layout_constraintLeft_toLeftOf="parent" 
        app:layout_constraintRight_toRightOf="parent" 
        app:layout_constraintTop_toBottomOf="@+id/sejarah" 
        android:layout_marginLeft="170dp" 
        android:layout_marginTop="30dp"/> 
 
 
</androidx.constraintlayout.widget.ConstraintLayout> 
