<?xml version="1.0" encoding="utf-8"?> 
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:tools="http://schemas.android.com/tools" 
    xmlns:app="http://schemas.android.com/apk/res-auto" 
    android:layout_width="match_parent" 
    android:layout_height="match_parent" 
    tools:context=".MainActivity"> 
 
    <RelativeLayout 
        android:layout_height="match_parent" 
        android:layout_width="match_parent" 
        android:background="#C8EFD5"> 
        <TextView 
        android:id="@+id/textView" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:background="#00B300" 
        android:textSize="20dp" 
        tools:ignore="MissingConstraints"></TextView> 
        <TextView 
            android:id="@+id/textView2" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="700dp" 
            android:background="#00B300" 
            android:textSize="20dp" 
            tools:ignore="MissingConstraints"> 
        </TextView> 
 
        <TextView 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:layout_marginTop="50dp" 
            android:layout_marginLeft="150dp" 
            android:fontFamily="Comic san ms" 
            android:gravity="center" 
            android:paddingTop="40dp" 
            android:text="Search" 
            android:textSize="30dp" 
            android:textStyle="bold" 
            android:id="@+id/search" 
            android:textColor="#1C441C" 
            android:foregroundGravity="center"></TextView> 
        <EditText 
            android:layout_width="match_parent" 
            android:lines="@android:integer/config_mediumAnimTime" 
            android:outlineAmbientShadowColor="@color/colorPrimaryDark" 
            android:outlineSpotShadowColor="@color/colorPrimaryDark" 
            android:shadowColor="@color/colorPrimary" 
            android:layout_height="50dp" 
            android:background="#ffffff" 
            android:layout_marginTop="70dp" 
            android:gravity="center" 
            android:layout_below="@id/search" 
            android:layout_marginLeft="20dp" 
            android:layout_marginRight="20dp" 
 
            android:hint="Search all Information"></EditText> 
        <ImageView 
            android:layout_width="500dp" 
            android:layout_height="1000dp" 
            android:layout_below="@+id/search" 
            android:layout_marginTop="100dp" 
            android:src="@drawable/kybord"></ImageView> 
    </RelativeLayout> 
 
</androidx.constraintlayout.widget.ConstraintLayout>